{
  "workspace": ["./packages/*"],
  "tasks": {
    "docs:build": "cd docs && deno install && typedoc",
    "docs:watch": "cd docs && deno install && typedoc --watch",
    "syncserver": "PORT=8095 DB_FILE=./data/syncserver.sqlite deno run -A --unstable-kv --v8-flags='--prof' packages/leaf-sync-socket-io-server/example-server.ts"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
