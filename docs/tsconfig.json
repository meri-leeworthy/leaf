{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "./types/extra.d.ts",
      "./types/deno/lib.esnext",
      "./types/deno/lib",
      "./types/deno/lib.deno.ns",
      "./types/deno/lib.deno.unstable",
    ],
    "paths": {
      "@muni-town/*": [
        "../packages/*"
      ],
    }
  },
  "include": [
    "../packages"
  ],
  "exclude": [
    "../**/*.test.ts",
  ]
}